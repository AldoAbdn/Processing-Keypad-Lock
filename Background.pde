int red = 100;
int green = 100;
int blue = 100;

void setBackgroundGrey(){
  red = 100;
  green = 100;
  blue = 100;
}

void setBackgroundRed(){
  red = 255;
  green = 0;
  blue = 0;
}

void setBackgroundGreen(){
  red = 0;
  green = 255;
  blue = 0;
}
